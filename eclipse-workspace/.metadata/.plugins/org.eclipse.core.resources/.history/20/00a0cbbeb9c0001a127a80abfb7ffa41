package com.proyectocsi.api.rest.auth;

import org.springframework.context.annotation.Configuration;
import org.springframework.http.HttpMethod;
import org.springframework.security.config.annotation.web.builders.HttpSecurity;
import org.springframework.security.oauth2.config.annotation.web.configuration.EnableResourceServer;
import org.springframework.security.oauth2.config.annotation.web.configuration.ResourceServerConfigurerAdapter;

@Configuration
@EnableResourceServer
public class ResourceSeverConfig extends ResourceServerConfigurerAdapter{

	@Override
	public void configure(HttpSecurity http) throws Exception {
		http.authorizeRequests().antMatchers(HttpMethod.GET,"/api/alumnos","/api/alumnos/{id}").hasRole("ADMIN")
		.antMatchers(HttpMethod.POST,"/api/registra-alumno").hasRole("ADMIN")
		.antMatchers(HttpMethod.PUT,"/api/modifica-alumno").hasRole("ADMIN")
		.antMatchers(HttpMethod.DELETE,"/api/elimina-alumno").hasRole("ADMIN")
		.antMatchers(HttpMethod.GET,"/api/maestros","/api/maestros/{id}").hasRole("ADMIN")
		.antMatchers(HttpMethod.POST,"/api/registra-maestro").hasRole("ADMIN")
		.antMatchers(HttpMethod.PUT,"/api/modifica-maestro").hasRole("ADMIN")
		.antMatchers(HttpMethod.DELETE,"/api/elimina-maestro").hasRole("ADMIN")
		.antMatchers(HttpMethod.GET,"/api/materias","/api/materias/{id}").hasRole("PROFFESOR")
		.antMatchers(HttpMethod.POST,"/api/registra-materia").hasRole("PROFFESOR")
		.antMatchers(HttpMethod.GET,"/api/grupos","/api/grupos/{id}").hasRole("PROFFESOR")
		.antMatchers(HttpMethod.POST,"/api/registra-grupo").hasRole("PROFFESOR")
		.anyRequest().authenticated();
	}
	
}
